<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_user">
    <include
        layout="@layout/toolbar_layout"/>

    <EditText
        android:id="@+id/Signup_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:hint="Name"/>

    <EditText
        android:id="@+id/Signup_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/Signup_Name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:hint="Email Id"/>

    <EditText
        android:id="@+id/Signup_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/Signup_Email"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:hint="Phone Number"/>

    <EditText
        android:id="@+id/Signup_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="Display_genderdialog"
        android:layout_below="@+id/Signup_Phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:hint="Gender"/>

    <EditText
        android:id="@+id/Signup_Age"
        android:onClick="setDate"

        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/Signup_Gender"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:hint="Date of Birth"

        />

    <EditText
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Signup_Gender"
        android:layout_marginLeft="30dp"

        android:layout_marginTop="25dp"
        android:editable="false"
        android:clickable="false"
        android:inputType="date"

        android:layout_marginRight="41dp"

        android:hint="D.O.B"


        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="Firebase"
        android:layout_below="@+id/Signup_Age"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        />


</RelativeLayout>